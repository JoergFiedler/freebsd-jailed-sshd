# allow outgoing SSH from jump host to host's external ip
# which will be redirect to host's internal ip
pass out quick log on {{ int_if }} proto tcp \
  from {{ jail_ip }} \
  to {{ ext_ip }} port {{ sshd_port }} \
  flags S/SA keep state

# Disable sshd to external interface
block log proto tcp \
  from any \
  to {{ ext_ip }} port {{ sshd_port }}

